{
  "manifest_version": 3,
  "name": "Skroutz Vanced",
  "action": {},
  "description": "Removes Sponsored Items, Saves Carts, Adds Price Graphs and Sorts Based on Product's Lowest Price.",
  "version": "0.1.4",
  "icons": {},
  "host_permissions": ["https://*.skroutz.gr/*"],
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.skroutz.gr/cart*"],
      "js": ["src/content-scripts/cart.js"]
    },
    {
      "matches": ["https://www.skroutz.gr/c/*", "https://www.skroutz.gr/search*"],
      "js": ["src/content-scripts/search.js", "src/lib/Chart.js", "src/lib/d3.v7.min.js", "src/content-scripts/grafima.js"],
      "type": "module"
    },
    {
      "matches": ["https://www.skroutz.gr/s/*"],
      "js": ["src/content-scripts/product.js", "src/lib/Chart.js", "src/lib/d3.v7.min.js", "src/content-scripts/grafima.js"],
      "type": "module"
    },
    {
      "matches": [
        "https://www.skroutz.gr/prosfores*",
        "https://www.skroutz.gr/account/*",
        "https://www.skroutz.gr/plus-deals*",
        "https://www.skroutz.gr/shop*",
        "https://www.skroutz.gr/m.*",
        "https://*.skroutz.gr/"
      ],
      "js": ["src/lib/Chart.js", "src/lib/d3.v7.min.js", "src/content-scripts/grafima.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/images/deletecart.png", "src/**/*.js"],
      "matches": ["https://*.skroutz.gr/*"]
    }
  ]
}
